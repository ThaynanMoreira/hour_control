<%= form_for(@timetable) do |f| %>
  <%#= render 'layouts/error_messages', object: f.object %>

  <div class="field">
  	<%= f.hidden_field :project_id %>
  </div>



    <div class="field">
      <%= label_tag "Quantidade de Horas" %>
      <%= f.number_field :hours_amount %>
    </div>

    <div class="field">
      <%= label_tag "Observação" %>
      <%= f.text_field :observation %>
    </div>


    <div>
      <%= label_tag "Data" %>
      <%= text_field_tag :date, "#{Date.today.strftime"%m/%Y"}", 'data-behaviour' => 'datepicker' %>
    </div>


  <label for="timetable_type_id">Type</label>
      <%= select(:timetable, :type_id, @types ) %>

  <%= f.submit "Post", :class => "btn btn-large btn-primary" %>
<% end %>


<script type="text/javascript">

    $('[data-behaviour~=datepicker]').datepicker({
        format: "mm/yyyy",
        minViewMode: 1,
        todayBtn: "linked"
    });

</script>